@import 'nib'

@font-face
  font-family 'Life Savers'
  font-style normal
  font-weight 400
  src local('Life Savers'), local('LifeSavers'), url(http://themes.googleusercontent.com/static/fonts/lifesavers/v2/_yRJoxB8KMO25_gswqItc7rIa-7acMAeDBVuclsi6Gc.woff) format('woff')



body
  background-color #333
  
h1
  font-family 'Life Savers', cursive
  font-size 60px
  line-height 1em
  color #F5F5F5
  
p
  font-family 'Life Savers', cursive
  font-size 32px
  color #FDFDFD
  
  &.instructions
    relative top 50px
    margin-bottom 50px
  
em
  color #F75390
  border-bottom 3px solid
  
input[type=text]
  height auto
  relative bottom 5px
  background none
  border none
  box-shadow none
  border-radius 0px
  border-bottom 1px solid #555
  
  font-family 'Life Savers', cursive
  font-size 48px
  color white
  
  &:focus
    box-shadow none
    
    
div.btn-group
  relative top 30px left 50px
  
  
input[type=submit]
  relative top 100px
  height 100px
  font-family 'Life Savers', cursive
  font-size 48px
  color white
    

div#heading
  relative top 50px